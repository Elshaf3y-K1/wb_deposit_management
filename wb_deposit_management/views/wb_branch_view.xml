<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wb_branch_form" model="ir.ui.view">
        <field name="name">wb.branch.form</field>
        <field name="model">wb.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="bank_id"/>
                    </group>
                    <group>
                        <field name="manager_id"/>
                        <field name="employee_ids"/>
                    </group>
                    <group>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>