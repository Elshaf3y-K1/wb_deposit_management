<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_home" name="Deposit Portal Home">
        <t t-call="web.portal_layout">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-header">
                                <h5>Current Balance</h5>
                            </div>
                            <div class="card-body">
                                <h2 class="card-title" t-esc="'%.2f' % balance"/>
                                <p class="card-text">Currency Unit</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <a href="/my/deposit/request" class="btn btn-primary btn-block">
                                <i class="fa fa-plus"/> New Deposit Request
                            </a>
                            <a href="/my/transactions" class="btn btn-secondary btn-block">
                                <i class="fa fa-history"/> Transaction History
                            </a>
                            <a href="/my/profile" class="btn btn-info btn-block">
                                <i class="fa fa-user"/> My Profile
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Recent Transactions</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="transactions" t-as="t">
                                            <tr>
                                                <td><span t-field="t.create_date"/></td>
                                                <td>
                                                    <t t-if="t.tran_state == 'deposit'">
                                                        <span class="badge badge-success">Deposit</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge badge-danger">Withdrawal</span>
                                                    </t>
                                                </td>
                                                <td><span t-field="t.balance" t-options='{"widget": "monetary"}'/></td>
                                                <td>
                                                    <t t-if="t.state == 'draft'">
                                                        <span class="badge badge-warning">Pending</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge badge-success">Completed</span>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_transactions" name="Deposit Transactions">
        <t t-call="web.portal_layout">
            <div class="container mt-4">
                <h2>Transaction History</h2>
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Date</th>
                                    <th>Bank</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Commission</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="transactions" t-as="t">
                                    <tr>
                                        <td><span t-field="t.id"/></td>
                                        <td><span t-field="t.create_date"/></td>
                                        <td><span t-field="t.bank_id.name"/></td>
                                        <td>
                                            <t t-if="t.tran_state == 'deposit'">Deposit</t>
                                            <t t-else="">Withdrawal</t>
                                        </td>
                                        <td><span t-field="t.balance" t-options='{"widget": "monetary"}'/></td>
                                        <td><span t-field="t.commission_amount" t-options='{"widget": "monetary"}'/></td>
                                        <td><span t-field="t.total_amount" t-options='{"widget": "monetary"}'/></td>
                                        <td>
                                            <t t-if="t.state == 'draft'">Pending</t>
                                            <t t-else="">Completed</t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="request_deposit" name="Request Deposit">
        <t t-call="web.portal_layout">
            <div class="container mt-4">
                <h2>New Deposit Request</h2>
                <div class="card">
                    <div class="card-body">
                        <form action="/my/deposit/submit" method="post">
                            <div class="form-group">
                                <label for="bank_id">Bank</label>
                                <select class="form-control" id="bank_id" name="bank_id" required>
                                    <option value="">Select Bank</option>
                                    <t t-foreach="banks" t-as="bank">
                                        <option t-att-value="bank.id" t-esc="bank.name"/>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="number" class="form-control" id="amount" name="amount"
                                       min="1" step="0.01" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Request</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_profile" name="Deposit Profile">
        <t t-call="web.portal_layout">
            <div class="container mt-4">
                <h2>My Profile</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Personal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <p t-field="partner.name"/>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <p t-field="partner.email"/>
                                </div>
                                <div class="form-group">
                                    <label>Phone</label>
                                    <p t-field="partner.phone"/>
                                </div>
                                <div class="form-group">
                                    <label>Bank</label>
                                    <p t-field="partner.wb_bank_id.name"/>
                                </div>
                                <div class="form-group">
                                    <label>Loyalty Points</label>
                                    <p t-field="partner.loyalty_points"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Change Password</h5>
                            </div>
                            <div class="card-body">
                                <form action="/web/session/change_password" method="post">
                                    <div class="form-group">
                                        <label for="old_pwd">Current Password</label>
                                        <input type="password" class="form-control" id="old_pwd"
                                               name="old_pwd" required/>
                                    </div>
                                    <div class="form-group">
                                        <label for="new_pwd">New Password</label>
                                        <input type="password" class="form-control" id="new_pwd"
                                               name="new_pwd" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm_pwd">Confirm Password</label>
                                        <input type="password" class="form-control" id="confirm_pwd"
                                               name="confirm_pwd" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>