<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wb_bank_form" model="ir.ui.view">
        <field name="name">wb.bank.form</field>
        <field name="model">wb.bank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="balance"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="transaction_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>